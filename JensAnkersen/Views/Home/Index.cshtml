@model ControllerName
@{
    ViewData["Title"] = "Home Page";
    string controllerstring = "";
    if (!String.IsNullOrWhiteSpace(Model.ControllerString))
    {
        controllerstring = Model.ControllerString;
    }
}

<div class="text-center" style="margin-top: 20px;">
    <h1 class="display-3" style="font-size:2vmax;">Jeg tilbyder nedenstående:</h1>
</div>

<div class="container">
    <div class="row">
        <div class="wrapper_box col-md-4">
            <div class="headline">
                <button class="subjectbox" id="therapybutton" onclick="window.location='Therapy/Index'">
                    <p style="font-size:2.0vmax;">
                        Terapi samtaler
                    </p>
                </button>
            </div>
            <div class="popup thumbnail">
                <button class="subjectbox" id="therapybutton" onclick="window.location='Therapy/Index'">
                    <p class="nav-item">
                        <b>Terapi samtaler</b> til enkeltpersoner, til par og til familier. Der er åben for nye henvendelser.
                    </p>
                </button>
            </div>
        </div>
        <div class="wrapper_box col-md-4">
            <div class="headline">
                <button class="subjectbox" id="supervisionbutton" onclick="window.location='Supervision/Index'">
                    <p style="font-size:2.0vmax;">
                        Supervision
                    </p>
                </button>
            </div>
            <div class="popup">
                <button class="subjectbox" id="supervisionbutton" onclick="window.location='Supervision/Index'">
                    <p class="nav-item">
                        <b>Supervision</b> til medarbejdere og ledere i grupper eller individuelt.
                    </p>
                </button>
            </div>
        </div>
        <div class="wrapper_box col-md-4">
            <div class="headline">
                <button class="subjectbox" id="organizationbutton" onclick="window.location='Organization/Index'">
                    <p style="font-size:2.0vmax;">
                        Organisations-<br />udvikling
                    </p>
                </button>
            </div>
            <div class="popup">
                <button class="subjectbox" id="organizationbutton" onclick="window.location='Organization/Index'">
                    <p class="nav-item">
                        <b>Organisations-<br />udvikling</b> i form af personaletræning, facilitere organisationer i forandring, konflikthåndtering.
                    </p>
                </button>
            </div>
        </div>
        <div class="wrapper_box col-md-4">
            <div class="headline">
                <button class="subjectbox" id="teachingbutton" onclick="window.location='Teaching/Index'">
                    <p style="font-size:2.0vmax;">
                        Undervisning
                    </p>
                </button>
            </div>
            <div class="popup">
                <button class="subjectbox" id="teachingbutton" onclick="window.location='Teaching/Index'">
                    <p class="nav-item">
                        <b>Uddannelsesforløb og undervisning</b> af kortere eller længere varighed, kurser og foredrag og temadage indenfor emner som kommunikation, teori og praksis i systemisk og narrativ tilgang, konflikthåndtering samt emner indenfor psykiatri- og misbrugsbehandling.
                    </p>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="text-center" style="margin:auto; width: 80%; padding: 50px 0px 50px 0px;">
    <h1 class="display-3" style="font-size:1.8vmax; line-height:1.6;">Du er altid velkommen til at ringe (Link til kontakt) eller sende mig en <a href="mailto:jank61@hotmail.com?subject=Forespørgsel%20på%20opgave">mail</a> helt uforpligtende med en hvilken som helst opgave du ønsker hjælp til.</h1>
</div>

<div class="text-center thumbnail" style="font-size:0.8vmax;">
    <a> @Html.ActionLink("Tilbage til toppen", "Index", controllerstring, null, null, "BackToTop", null, null)</a>
</div>